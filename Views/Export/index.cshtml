@{
    ViewData["Title"] = "Export Options";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-12">
            <h1 class="display-4">SarExportSuite</h1>
            <p class="lead">Choose your export format below:</p>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-file-excel text-success"></i>
                        Export to Excel
                    </h5>
                    <p class="card-text">Export sample data to an Excel spreadsheet (.xlsx format)</p>
                    <a href="@Url.Action("ExportExcel", "Export")" class="btn btn-success">
                        <i class="fas fa-download"></i> Download Excel
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="fas fa-file-pdf text-danger"></i>
                        Export to PDF
                    </h5>
                    <p class="card-text">Generate a PDF report with sample user data</p>
                    <a href="@Url.Action("ExportPdf", "Export")" class="btn btn-danger">
                        <i class="fas fa-download"></i> Download PDF
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <div class="row mt-4">
        <div class="col-md-12">
            <div class="alert alert-info">
                <h6><i class="fas fa-info-circle"></i> About SarExportSuite</h6>
                <p class="mb-0">This application demonstrates export functionality using EPPlus for Excel and Rotativa for PDF generation.</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js" crossorigin="anonymous"></script>
}
